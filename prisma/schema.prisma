// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  email     String   @unique
  name      String?
  jobTitle  String?
  role      Role
}

enum Role {
  CUSTOMER_SUCCESS
  DESIGN
  ENGINEERING
  FINANCE
  LEGAL
  MANAGEMENT
  MARKETING
  OPERATIONS
  PRODUCT_MANAGEMENT
  RESEARCH
  SALES
  SUPPORT
  OTHER
}
